@model IEnumerable<WahlbergUr.Models.Product>
@{
    ViewData["Title"] = "Tillgängliga Produkter";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tillgängliga produkter</title>
</head>
<body>
    <h4>@ViewData["Title"]</h4>
    @foreach (var item in Model)
    {
        <div class="gridwrapper">
            <div class="item1">
                <a href="@Url.Action("ShowProduct", "Products", new { id = item.ProductId})">
                    <img src="@Url.Content(item.ProductUrlThumb)" @*height="250" width="150"*@ alt="Image" />
                </a>
            </div>
            <div class="item2">
                @Html.DisplayFor(modelItem => item.ProductName)
            </div>
            <div class="item3">@Html.DisplayFor(modelItem => item.ProductPrice)</div>
        </div>
    }
</body>
</html>
