@model WahlbergUr.Models.Product

@{
    ViewData["Title"] = "Ändra en Produkt";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ändra en Produkt</title>
</head>
<body>
    <h4>@ViewData["Title"]</h4>
    <div id="editProduct">
        @{
            var product = ViewData["Product"] as Product;
        }

        <form method="post" asp-controller="Admin" asp-action="EditProduct">
            <div class="form-group">
                <label asp-for="ProductId"></label>
                <input asp-for="ProductId" class="form-control" value="@product.ProductId" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" value="@product.ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInformation"></label>
                <input asp-for="ProductInformation" class="form-control" value="@product.ProductInformation" />
                <span asp-validation-for="ProductInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice"></label>
                <input asp-for="ProductPrice" class="form-control" value="@product.ProductPrice" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductUrlThumb"></label>
                <input asp-for="ProductUrlThumb" class="form-control" value="@product.ProductUrlThumb" />
                <span asp-validation-for="ProductUrlThumb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductUrlLarge"></label>
                <input asp-for="ProductUrlLarge" class="form-control" value="@product.ProductUrlLarge" />
                <span asp-validation-for="ProductUrlLarge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-default">Ändra Produkt</button>
            </div>
        </form>
        <form method="post" asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.ProductId">
            <div class="form-group">
                <button type="submit" class="btn btn-default">Ta bort Produkt</button>
            </div>
        </form>
    </div>
</body>
</html>

